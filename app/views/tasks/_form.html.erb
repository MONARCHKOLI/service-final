<%= form_with model: [ @contractor, @contractor.tasks.build ] do |form| %>
    <p>
      <%= form.label :category %><br>
      <%= form.select :category ,["plumber","electrician"]%>
    </p>
    <p>
    <%= form.label :status %><br>
    <%= form.select :status,["ACTIVE","DEACTIVE"] %>
    </p>
    <p>
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </p>
    <p>
      <%= form.label :amount %><br>
      <%= form.text_field :amount %>
    </p>
   
    <p>
      <%= form.submit %>
    </p>
  <% end %>